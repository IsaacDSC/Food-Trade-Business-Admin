<section id="dashboard" onclick="carregar()">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="white" data-image="../assets/img/sidebar-1.jpg">
            {{>_navEditPages}}
            <div class="content p-1">
                <div class="list-group-item">
                    <div class="d-flex">
                        <div class="mr-auto p-2">
                            <h2 class="display-4 titulo">Upload de imagems</h2>
                        </div>
                        <div class="p-2">
                            <span class="d-none d-md-block">
                                <a href="/uploadfiles/delete" class="btn btn-outline-primary btn-sm">Delete Images</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/uploadfiles/delete">Delete Images</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <h4>Visualizar Imagens Carregadas</h4>
                    <form action="/uploadfiles/files" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                <div class="custom-file">
                                    <select name="file" id="file" class="form-control">
                                        {{#each paths}}
                                        <option value="{{this}}">{{this}} </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-info col-12">Carregar</button>
                    </form>
                    <hr class="mt-5">
                    <h4>Carregamento das Imagens</h4>
                    <form action="/uploadfiles/upload" method="POST" enctype="multipart/form-data">
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label><span class="text-danger">* </span>Carregue a Imagem</label>
                                <div class="custom-file">
                                    <input type="file" name="img" class="form-control" id="customFile" border="1">
                                    <label class="form-control" for="customFile">Carregar Arquivo</label>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-success col-12">Enviar</button>
                    </form>
                    <hr class="mt-5">
                    <h4>Deletar Imagens Carregadas</h4>
                    <form action="/uploadfiles/delete" method="POST">
                        <div class="form-row">
                            <div class="form-group col-md-12">
                                <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                <div class="custom-file">
                                    <select name="file" id="file" class="form-control">
                                        {{#each paths}}
                                        <option value="{{this}}">{{this}} </option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                        </div>
                        <button class="btn btn-outline-danger col-12">Deletar</button>

                </div>

            </div>
        </div>
    </div>
    </div>
</section>