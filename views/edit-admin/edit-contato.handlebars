<div class="dashboard-wrapper">
    <div class="container-fluid  dashboard-content">
        <!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Formulário Adionar Aperitivos</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit
                        amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Forms</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Form Validations</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        {{>_msg}}

        <!-- ============================================================== -->
        <!-- horizontal form -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

            <div class="card">
                <h5 class="card-header">Cadastro do Produto Aperitivo</h5>
                <div class="card-body">
                    <form action="" method="POST">
                        <input name="id" type="hidden" value="{{slideshow.dataValues.id}}">
                        <h4>Carregamento das Imagens</h2>
                            <div class="form-row">
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                    <div class="custom-file">
                                        <select name="" id="" class="form form-control">
                                            <option value="{{slideshow.dataValues.img1}}">{{slideshow.dataValues.img1}}
                                            </option>
                                            <option value="{{slideshow.dataValues.img2}}">{{slideshow.dataValues.img2}}
                                            </option>
                                            <option value="{{slideshow.dataValues.img3}}">{{slideshow.dataValues.img3}}
                                            </option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Nome da primeira Imagem e sua
                                        extensão</label>
                                    <input name="title" type="text" class="form-control" id="title"
                                        placeholder="Digite o nome do arquivo e sua extensão ex: img.png"
                                        value="{{slideshow.dataValues.title1_1}}" required>
                                </div>
                                <div class="form-group col-md-4">
                                    <label><span class="text-danger">* </span>Carregue a Imagem</label>
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="customFile" border="1">
                                        <label class="custom-file-label" for="customFile">Carregar Arquivo</label>
                                    </div>
                                </div>
                                <button class="btn btn-info">Enviar</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end horizontal form -->
        <!-- ============================================================== -->
    </div>

</div>