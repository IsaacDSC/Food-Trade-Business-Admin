                                <div class="form-group col-md-12">
                                    <label><span class="text-danger">* </span>Imagem já carregadas</label>
                                    <div class="custom-file">
                                        <select name="img1" id="img1" class="form form-control">
                                            <option value="null">Selecione a imagem</option>
                                            {{#each paths}}
                                            <option value="{{this}}">{{this}}</option>    
                                            {{/each}}                                       
                                        </select>
                                    </div>
                                </div>                                                        
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label><span class="text-danger">* </span>Imagem já carregadas</label>
