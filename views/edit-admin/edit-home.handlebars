                                <input name="title1_1" type="text" class="form-control" id="title1_1"
                                    placeholder="Digite o nome da navegação" value="{{slideshow.dataValues.title1_1}}" required>
                            </div>
                            <div class="form-group col-md-6">
                                <label><span class="text-danger">* </span>Titulo da primeira Imagem (parte-dois)</label>
