<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h2 class="text-center">Primeiras Configurações</h2>
            <form action="/" method="post">
                <div class="row mt-5 col-12 ml-1">
                    <div class="form-group col-3">
                        <label for="dataBase">Data Base</label>
                        <input type="text" name="dataBase" id="dataBase" class="form-control">
                    </div>
                    <div class="form-group col-3">
                        <label for="user">User</label>
                        <input type="text" name="user" id="user" class="form-control">
                    </div>
                    <div class="form-group col-3">
                        <label for="pwd">Password</label>
                        <input type="text" name="pwd" id="pwd" class="form-control">
                    </div>
                    <div class="form-group col-3">
                        <label for="host">Host</label>
                        <input type="text" name="host" id="host" class="form-control">
                    </div>
                </div>
                <div class="row col-12 mt-3">
                    <button type="submit" class="btn btn-outline-success col-12 ml-3">Enviar Configurações</button>
                </div>
            </form>
        </div>
    </div>
</div>